{
    "name": "codeial-cn",
    "version": "1.0.0",
    "description": "A social media platform",
    "main": "src/app.ts",
    "scripts": {
        "build:sass": "sass assets/sass:assets/css --no-source-map",
        "build:ts": "tsc && tsc-alias",
        "copy:ejs": "copyfiles -u 1 src/**/*.ejs dist",
        "build": "npm run build:ts && npm run build:sass && npm run copy:ejs",
        "watch:sass": "sass --watch assets/sass:assets/css",
        "watch:ts": "nodemon --ignore assets/ts/* src/app.ts",
        "watch:ts-client": "tsc --watch --project \"assets/ts/tsconfig.json\"",
        "start": "concurrently \"npm:watch:ts\" \"npm:watch:sass\"  \"npm:watch:ts-client\"",
        "prod": "set NODE_ENV=production&&node dist/app.js",
        "install-lib/client": "npm install --prefix ./assets/ts/"
    },
    "author": "Aniruddha Banerjee",
    "license": "ISC",
    "devDependencies": {
        "@types/connect-flash": "^0.0.37",
        "@types/cookie-parser": "^1.4.3",
        "@types/ejs": "^3.1.2",
        "@types/express": "^4.17.17",
        "@types/express-ejs-layouts": "^2.5.1",
        "@types/express-session": "^1.17.7",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.4.7",
        "@types/nodemailer": "^6.4.9",
        "@types/passport": "^1.0.12",
        "@types/passport-google-oauth": "^1.0.42",
        "@types/passport-jwt": "^3.0.9",
        "@types/passport-local": "^1.0.35",
        "@types/workerpool": "^6.4.1",
        "concurrently": "^8.2.0",
        "copyfiles": "^2.4.1",
        "gulp": "^4.0.2",
        "nodemon": "^3.0.1",
        "sass": "^1.65.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.3.1",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-ejs-layouts": "^2.5.1",
        "express-session": "^1.17.3",
        "jsonwebtoken": "^9.0.1",
        "mongoose": "^7.4.2",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.4",
        "passport": "^0.6.0",
        "passport-google-oauth": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "socket.io": "^4.7.2",
        "workerpool": "^6.4.2",
        "zod": "^3.21.4"
    }
}
