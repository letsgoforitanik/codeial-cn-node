<html>

<head>
    <title>Codeial | <%= viewBag.pageTitle %></title>
    <link rel="stylesheet" href="/css/main.css">
    <%- defineContent('style') %>
</head>

<body>
    <header>
        <div id="logo"><a href="/">codeial</a></div>
        <ul id="nav">
            <% if (user) { %>
                <li><a href="/users/profile"><%= user.name %></a></li>
                <li><a href="/users/sign-out">Sign Out</a></li>
                
            <% } else { %>
                <li><a href="/users/sign-in">Sign In</a></li>
                <li><a href="/users/sign-up">Sign Up</a></li>
            <% } %> 
        </ul>
    </header>
    <main><%- body %></main>
    <footer>
        <div id="copyright">@Coding Ninjas 2023. All Rights Reserved</div>
        <ul id="links">
            <li><a href="/">Home</a></li>
            <li><a href="/users/profile">Profile</a></li>
        </ul>
    </footer>
    <%- defineContent('script') %>
</body>

</html>
